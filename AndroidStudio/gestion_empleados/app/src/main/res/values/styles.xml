<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="botonVerde">
        <item name="android:backgroundTint">@color/verdeSelec</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:fontFamily">@font/michroma</item>
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="botonRojo">
        <item name="android:backgroundTint">@color/redSelec</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:fontFamily">@font/michroma</item>
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="titulo">
        <item name="android:textSize">34dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/michroma</item>
    </style>

    <style name="textoBlanco">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/michroma</item>
    </style>

    <style name="spinner" parent="@android:style/Widget.Holo.DropDownItem.Spinner">>
        <item name="android:textColor">@color/verdeSelec</item>
    </style>


</resources>